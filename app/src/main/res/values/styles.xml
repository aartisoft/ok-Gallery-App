<resources>
    <!--Tag for a view, which need a bg color set, according to the current theme-->
    <string name="theme_bg_color" translatable="false">THEME_BG_COLOR</string>
    <string name="theme_text_color_primary" translatable="false">THEME_TEXT_COLOR_PRIMARY</string>
    <string name="theme_text_color_secondary" translatable="false">THEME_TEXT_COLOR_SECONDARY</string>

    <!--Base Theme-->
    <style name="Gallery.Theme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowTranslucentNavigation">@bool/show_nav_bar</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Gallery.Theme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_light</item>
        <item name="colorAccent">@color/colorAccent_light</item>

        <item name="android:windowTranslucentNavigation">@bool/show_nav_bar</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--translucent Activity Base Theme-->
    <style name="Gallery.Theme.Translucent" parent="Gallery.Theme">
        <item name="android:windowBackground">@color/black_translucent2</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Gallery.Theme.Light.Translucent" parent="Gallery.Theme.Light">
        <item name="android:windowBackground">@color/black_translucent2</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--MainActivity Theme-->
    <style name="Gallery.Theme.Main" parent="Gallery.Theme">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="Gallery.Theme.Light.Main" parent="Gallery.Theme.Light">
        <item name="android:windowBackground">@null</item>
    </style>

    <!--AlbumActivity Theme-->
    <style name="Gallery.Theme.Translucent.Album" parent="Gallery.Theme" />

    <style name="Gallery.Theme.Light.Translucent.Album" parent="Gallery.Theme.Light.Translucent" />

    <!--PhotoView Theme-->
    <style name="Gallery.Theme.PhotoView" parent="Gallery.Theme">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white_translucent1</item>
    </style>

    <style name="Gallery.Theme.Light.PhotoView" parent="Gallery.Theme.Light">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white_translucent1</item>
    </style>

    <!--VideoPlayer Theme-->
    <style name="Gallery.Theme.VideoPlayer" parent="Gallery.Theme">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white_translucent1</item>
    </style>

    <style name="Gallery.Theme.Light.VideoPlayer" parent="Gallery.Theme.Light">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white_translucent1</item>
    </style>

    <!--FileExplorer Theme-->
    <style name="Gallery.Theme.Translucent.FileExplorer" parent="Gallery.Theme.Translucent" />

    <style name="Gallery.Theme.Light.Translucent.FileExplorer" parent="Gallery.Theme.Light.Translucent" />

    <!--FileOperationDialogActivity Theme-->
    <style name="Gallery.Theme.Translucent.FileOperationDialog" parent="Gallery.Theme.Translucent" />

    <style name="Gallery.Theme.Light.Translucent.FileOperationDialog" parent="Gallery.Theme.Light.Translucent" />

    <!--ExifEditor Theme-->
    <style name="Gallery.Theme.ExifEditor" parent="Gallery.Theme">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Gallery.Theme.Light.ExifEditor" parent="Gallery.Theme.Light">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--SettingsActivity Theme-->
    <style name="Gallery.Theme.Settings" parent="Gallery.Theme">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="Gallery.Theme.Light.Settings" parent="Gallery.Theme.Light">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <!--AboutActivity Theme-->
    <style name="Gallery.Theme.Translucent.About" parent="Gallery.Theme.Translucent" />

    <style name="Gallery.Theme.Translucent.Light.About" parent="Gallery.Theme.Light.Translucent" />

    <!--EditImage Theme-->
    <style name="Gallery.Theme.EditImage" parent="Gallery.Theme">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!--SetWallpaper Theme-->
    <style name="Gallery.Theme.SetWallpaper" parent="Gallery.Theme">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!--ExcludePaths Theme-->
    <style name="Gallery.Theme.ExcludePaths" parent="Gallery.Theme">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Gallery.Theme.Light.ExcludePaths" parent="Gallery.Theme.Light">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--VirtualDirectories Theme-->
    <style name="Gallery.Theme.VirtualDirectories" parent="Gallery.Theme">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Gallery.Theme.Light.VirtualDirectories" parent="Gallery.Theme.Light">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--Dialog Style-->
    <style name="Gallery.Theme.Dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Gallery.Theme.Light.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent_light</item>
    </style>

    <!-- Style for a DialogPreference Entry -->
    <style name="Gallery.Theme.DialogPreference">
        <item name="positiveButtonText">@android:string/ok</item>
        <item name="negativeButtonText">@android:string/cancel</item>
    </style>

    <!--View Styles-->

    <style name="TextShadow">
        <item name="android:shadowColor">@color/black_translucent2</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="AlbumTitle" parent="TextShadow">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AlbumSubTitle" parent="TextShadow">
        <!--<item name="android:fontFamily">@font/roboto_mono_light</item>-->
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_300</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Icon">
        <item name="android:shadowColor">@color/black_translucent2</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <!--<item name="android:alpha">0.7</item>-->
    </style>

    <style name="InfoColorItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:fontFamily">@font/roboto_mono_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey_300</item>
    </style>

    <style name="TagItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:fontFamily">@font/roboto_mono_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_300</item>
    </style>

    <style name="Gallery.Theme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Gallery.Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Gallery.Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
