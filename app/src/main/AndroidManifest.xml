<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gallery.album">

    <uses-permission android:name="android.permission.INTERNET" />
    <!--to read & write images ...-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--to set Wallpaper-->
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <!--to show FileOperation progress as a notification-->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Gallery.Theme">

        <activity
            android:name="com.gallery.album.ui.MainActivity"
            android:launchMode="singleTop"
            android:theme="@style/Gallery.Theme.Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.gallery.album.ui.AlbumActivity"
            android:launchMode="singleTop"
            android:theme="@style/Gallery.Theme.Translucent.Album" />

        <activity
            android:name="com.gallery.album.ui.ItemActivity"
            android:launchMode="singleTop"
            android:theme="@style/Gallery.Theme.PhotoView"
            android:windowSoftInputMode="adjustPan" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id" />

        <activity
            android:name="com.gallery.album.ui.VideoPlayerActivity"
            android:configChanges="screenSize|smallestScreenSize|orientation|screenLayout"
            android:launchMode="singleTask"
            android:supportsPictureInPicture="true"
            android:theme="@style/Gallery.Theme.VideoPlayer"
            tools:targetApi="n" />

        <activity
            android:name="com.gallery.album.ui.SettingsActivity"
            android:launchMode="singleTop"
            android:theme="@style/Gallery.Theme.Settings" />

        <activity
            android:name="com.gallery.album.ui.FileExplorerActivity"
            android:launchMode="singleTop"
            android:theme="@style/Gallery.Theme.Translucent.FileExplorer" />

        <activity
            android:name="com.gallery.album.ui.FileOperationDialogActivity"
            android:launchMode="singleTop"
            android:theme="@style/Gallery.Theme.Translucent.FileOperationDialog" />

        <receiver
            android:name="com.gallery.album.util.NetworkStateReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action
                    android:name="android.net.conn.CONNECTIVITY_CHANGE"
                    tools:ignore="BatteryLife" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.gallery.album.ui.EditImageActivity"
            android:label="@string/edit"
            android:launchMode="singleTop"
            android:theme="@style/Gallery.Theme.EditImage" />

        <activity
            android:name="com.gallery.album.ui.SetWallpaperActivity"
            android:label="@string/wallpaper"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Gallery.Theme.SetWallpaper">

            <intent-filter>
                <action android:name="android.intent.action.ATTACH_DATA" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.gallery.album.ui.ExcludePathsActivity"
            android:label="@string/excluded_paths"
            android:launchMode="singleTop"
            android:theme="@style/Gallery.Theme.ExcludePaths" />

        <activity
            android:name="com.gallery.album.ui.VirtualAlbumsActivity"
            android:label="@string/virtual_albums"
            android:launchMode="singleTop"
            android:theme="@style/Gallery.Theme.VirtualDirectories" />

        <activity android:name="com.gallery.album.IntentReceiver">
            <intent-filter tools:ignore="AppLinkUrlError">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
                <data android:mimeType="video/*" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.GET_CONTENT" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.OPENABLE" />

                <data android:mimeType="image/*" />
                <data android:mimeType="video/*" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.PICK" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
                <data android:mimeType="video/*" />
            </intent-filter>

            <intent-filter>
                <action android:name="com.android.camera.action.REVIEW" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
                <data android:mimeType="video/*" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.EDIT" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>


        <service
            android:name="com.gallery.album.data.fileOperations.Copy"
            tools:ignore="InnerclassSeparator" />

        <service
            android:name="com.gallery.album.data.fileOperations.Delete"
            tools:ignore="InnerclassSeparator" />

        <service
            android:name="com.gallery.album.data.fileOperations.Move"
            tools:ignore="InnerclassSeparator" />

        <service
            android:name="com.gallery.album.data.fileOperations.NewDirectory"
            tools:ignore="InnerclassSeparator" />

        <service
            android:name="com.gallery.album.data.fileOperations.Rename"
            tools:ignore="InnerclassSeparator" />
    </application>
</manifest>